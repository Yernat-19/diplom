<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.mussin.aroyinshyq.MainActivity">

    <include
        layout="@layout/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/equal_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_item_bg"
        android:elevation="8dp"
        android:padding="16dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="18dp">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/m_item_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_colorActive="@color/primary"
            app:bt_colorInactive="@color/secondary"
            app:bt_icon="@drawable/ic_main"
            app:bt_shape="@drawable/nav_item_bg"
            app:bt_title="@string/main" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/m_item_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bt_colorActive="@color/primary"
            app:bt_colorInactive="@color/secondary"
            app:bt_icon="@drawable/ic_account"
            app:bt_shape="@drawable/nav_item_bg"
            app:bt_title="@string/account" />


    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

    <!-- Add more child items here - max upto 5 -->

</androidx.constraintlayout.widget.ConstraintLayout>