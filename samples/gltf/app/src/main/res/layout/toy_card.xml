<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:id="@+id/toy_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/secondary"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="60dp"
        android:orientation="vertical">
        <TextView

            android:id="@+id/toy_name"
            android:textColor="@color/accent"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:text="имя"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/toy_price"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="7dp"

            android:text="0"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/favouriteButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/secondary"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:scaleType="centerInside"
        android:layout_marginBottom="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/secondary"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:id="@+id/toy_show_description"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="Сипаттамасын көру"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/toy_show_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AR көру"
            android:textColor="@color/accent"
            android:textSize="20sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/toy_description"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:text=""
        android:textColor="@color/white"
        android:textSize="14sp" />
</androidx.cardview.widget.CardView>